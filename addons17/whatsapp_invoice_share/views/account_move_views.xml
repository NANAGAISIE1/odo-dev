<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_whatsapp_share" model="ir.ui.view">
            <field name="name">account.move.form.whatsapp.share</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_invoice_sent']" position="after">
                    <button name="action_whatsapp_share"
                        type="object"
                        string="Share on WhatsApp"
                        icon="fa-whatsapp"
                        class="btn-secondary"
                        title="Share Invoice via WhatsApp" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>